<%
var monthNames = [ "January", "February", "March", "April", "May", "June",
    "July", "August", "September", "October", "November", "December" ];
var weekday = new Array(7);
weekday[0]=  "Sunday";
weekday[1] = "Monday";
weekday[2] = "Tuesday";
weekday[3] = "Wednesday";
weekday[4] = "Thursday";
weekday[5] = "Friday";
weekday[6] = "Saturday";
%>
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= post.title %></title>

  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
  <link rel="stylesheet" href="/css/styles.css" type="text/css" />
</head>
<body>
    <div class="container">
    <div class="row">
      <div class="col-lg-2">
        <header>
          <div id="logo">
            <a href="/"><img src="/images/logo.png" alt="Divvy Logo"></a>
          </div>
        </header><!-- header -->
      </div><!-- end col-lg-2 -->

      <div class="col-lg-8">

        <div class="post">
          <div class="row">
            <div class="col-lg-2">
              <img class="avatar" src="http://placehold.it/100x100" />
            </div>
            <div class="col-lg-8">
              <h1><%= post.title %></h1>
              <h3 class="task">"<%= post.task %>"<h3>
		  <span class="date"><%= weekday[post.date.getDay()] + " " + monthNames[post.date.getMonth()] + " " + post.date.getDate() + ", " + post.date.getFullYear() %></span>
			<br /><br />
              <p class="poster">Submitted by: <a href="/user/<%= post._poster %>"><%= post._poster %></a></span></p>
            </div>
            <div class="col-lg-2 bounty">
              <p><%= post.bounty %></p>
              <p>Points</p>
            </div><!-- end bounty -->
            <div class = "row">
	    </div>
            <div class="interested">
             <% for (var i = 0; i < post.interested; i++) { %>
              <a href="/account/<%= post.interested[i].username %>" title=""><%= post.interested[i].username %></a>
             <% } %>
            </div>
          </div><!-- end row -->
        </div><!-- end post -->

      </div>

    </div><!-- end row -->
  </div><!-- end container -->

  <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>
