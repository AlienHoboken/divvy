<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Edit Account</title>

  <link rel="stylesheet" href="css/bootstrap.min.css" />
  <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
  <link rel="stylesheet" href="css/styles.css" type="text/css" />
</head>
<body>
    <div class="container">
    <div class="row">
      <div class="col-lg-2">
        <header>
          <div id="logo">
            <a href="/"><img src="images/logo.png" alt="Divvy Logo"></a>
          </div>
        </header><!-- header -->
      </div><!-- end col-lg-2 -->

      <div class="col-lg-8">
        <form role="form" id="edit-user-form" action="/update" method="POST">

          <input type="text" name="name" placeholder="Name" value="<%= user.name || '' %>" />

          <input type="text" name="email" placeholder="Email" value="<%= user.email || '' %>" />

          <input type="text" name="city" placeholder="City" value="<%= user.city || '' %>" />

          <input type="text" name="state" placeholder="State" value="<%= user.state || '' %>">

          <input type="text" name="zip" placeholder="Zip" value="<%= user.zip || '' %>">

          <label for="skills">Skills</label>
          <select multiple class="multiselect" id="skills" name="skills"></select>

          <label for="interests">Interests</label>
          <select multiple class="multiselect" id="interests" name="interests"></select>

          <input class="btn btn-primary" type="submit" value="Submit" />

        </form>
      </div>

    </div><!-- end row -->
  </div><!-- end container -->

  <script>
    var user_skills = [];
    var user_interests = [];

    <% for (var i in user.skills) { %>
      user_skills.push('<%= user.skills[i] %>');
    <% } %>

    <% for (var i in user.interests) { %>
      user_skills.push('<%= user.interests[i] %>');
    <% } %>
  </script>

  <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
  <script src="js/bootstrap.min.js" type="text/javascript"></script>
  <script src="js/bootstrap-multiselect.js" type="text/javascript"></script>
  <script type="text/javascript" src="js/account.js"></script>
  <script>
    $(document).ready(function() {
      $('.multiselect').multiselect();
    });
  </script>
</body>
</html>